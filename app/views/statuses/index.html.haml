.page-header
  %h1 Status Feed

= button_to "Post a new Status", new_status_path, :class => "btn btn-success"

- @statuses.each do |status|
  .status
    %strong
      = status.name
    %p
      = status.content
    .meta
      = link_to time_ago_in_words(status.created_at) + " ago", status
      %span.admin
        |
        = link_to "Edit", edit_status_path(status)
        |
        = link_to "Delete", status, :method => :delete, :data => { :cofnirm => 'Are you sure you want to delete this status?' }
  %br